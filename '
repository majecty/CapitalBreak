	}
}
void StartScene::clean_up()
{
	SDL_FreeSurface(background);
}
void StartScene::do_event()
{
}
void StartScene::show()
{
	apply_surface(0,0,background,screen);
	if( SDL_Flip(screen) == -1)
	{
	//	return 1;
	}
}


